{% if flashes is defined and flashes is not same as null %}
    <div class="fixed top-[5px] w-fit-content m-auto left-[5px]"
        {{ stimulus_controller('notifications') }}
    >
    {% for type, messages in flashes %}
        {% for message in messages %}
            <div class="relative bg-{{ type }} border-{{ type }}-500 rounded-b text-{{ type }}-900 px-4 py-3 shadow-md rounded-lg fade-in-out"
                 data-notifications-target="message"
                 role="alert">
                <div class="flex items-center justify-center">
                    <div>
                        <p class="font-bold">{{ message }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
        </div>
    {% endfor %}
{% endif %}
