{% extends "base.html.twig" %}

{% block pageTitle %}
    <h1 class="mx-auto mb-6 mt-6 text-4xl text-center font-extrabold tracking-tight leading-none text-gray-900
    md:text-5xl lg:text-6xl dark:text-black">
        {{ 'page.product_index.title'|trans({}, 'page')}}
    </h1>
{% endblock %}

{% block body %}
    {% if products is defined and products is not empty %}
        {% include '/product/filters/_filters.html.twig' with {'attributes': attributes} %}

        <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4 mr-4 ml-4" data-products-container>
            {% include '/product/include/items.html.twig' with {'products': products} %}
        </div>
    {% else %}
        <p class="text-center text-2xl mt-6">{{ 'product.no_results'|trans({}, 'product') }}</p>
    {% endif %}
{% endblock %}
